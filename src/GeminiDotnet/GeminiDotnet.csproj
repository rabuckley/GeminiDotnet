<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsAotCompatible>true</IsAotCompatible>
        <IsPackable>true</IsPackable>
        <PackageId>GeminiDotnet</PackageId>
        <Version>0.9.0</Version>
        <Authors>Ryan Buckley</Authors>
        <Description>A lightweight, modern C# library for direct interaction with the Google Gemini API.</Description>
        <PackageTags>AI, Gemini, Google Gemini, Google AI</PackageTags>
        <PackageProjectUrl>https://github.com/rabuckley/GeminiDotnet</PackageProjectUrl>
        <RepositoryUrl>https://github.com/rabuckley/GeminiDotnet</RepositoryUrl>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <PackageLicenseFile>LICENCE</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.md" Pack="true" PackagePath="" />
        <None Include="../../LICENCE" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="System.Net.ServerSentEvents" />
    </ItemGroup>

</Project>
